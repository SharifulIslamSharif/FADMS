@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
  //  Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.7/css/mdb.min.css" rel="stylesheet">
    @*<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <link href="~/css/sb-admin-2.min.css" rel="stylesheet">*@
    <link href="~/SweetAlert/sweetalert2.css" rel="stylesheet" />
</head>

<body>
    <!-- Material form register -->

    <div class="card-body">
        <div class="row" style="height:100px;">

            @*<img src="~/images/Special branch.png" style="margin:0px 0px 10px 0px;" height="100" width="100" />


                <div class="row col-sm-7">
                    <h3 style="color:black;margin-top: 40px; font-weight: 700;">Fire Arms Application Management System</h3>
                </div>*@
        </div>
        <div class="row col-md-12">

            <div class="container col-md-8">
                <div class="card">
                    <div class="card" style="background-color:#20119d">




                    </div>
                </div>
            </div>
            <div class="container col-md-7">

                <h3 style="color:black;font-weight: 700;width:110%;padding-left:5%"><img src="~/img/DDM_BD.png" style="margin:1px 1px 1px 1px;width:50px;height:50px" />Fire Arms Application Management System</h3>
                <div class="card">

                    <h5 class="card-header info-color white-text text-center py-4" style="font-size:x-large">
                        <strong>
                            নিবন্ধন করুন
                        </strong>
                    </h5>

                    <!--Card content-->
                    <div class="card-body px-lg-5 pt-0">

                        <!-- Form -->
                        <form class="text-center" asp-controller="Account" asp-action="GeneralRegister" style="color: #757575;" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <br />
                            <!-- E-mail -->
                            <div class="md-form mt-0">
                                <input type="email" id="materialRegisterFormEmail" name="Email" class="form-control" placeholder="ই-মেইল লিখুন">
                            </div>

                            <div class="md-form mt-0">
                                <input type="text" name="Name" id="materialRegisterFormEmail" class="form-control" placeholder="ব্যবহারকারীর নাম লিখুন">
                                @*<label for="materialRegisterFormEmail" name="Name">User ID</label>*@
                                <input type="hidden" name="UserTypeName" value="5" />
                                <input type="text" id="userid" name="userid" hidden>
                            </div>

                            <div class="md-form">
                                <input type="text" name="PhoneNumber" id="materialRegisterFormPhone" class="form-control" placeholder="ফোন নাম্বার লিখুন" aria-describedby="materialRegisterFormPhoneHelpBlock">
                                @*<label for="materialRegisterFormPhone">Phone number</label>*@
                            </div>
                            @*<label for="licenseNumber" class="col-sm-2 col-form-label">@Model.fLang.licenseNumber *</label>*@
                            <div class="form-group">
                                <select class="form-control" name="licenseTypeName" id="licenseTypeName">
                                    <option value="0 ">লাইসেন্সের ধরন পছন্দ করুন </option>
                                    <option value="1">ব্যক্তিগত </option>
                                    <option value="3">প্রতিষ্ঠান</option>
                                    <option value="4">আর্থিক প্রতিষ্ঠান</option>
                                </select>

                            </div>
                            <div class="md-form">
                                <input type="password" name="Password" id="materialRegisterFormPassword" placeholder="পাসওয়ার্ড লিখুন" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock">
                                @*<label for="materialRegisterFormPassword"  name="Password">Password</label>*@
                            </div>

                            <div class="md-form">
                                <input type="password" name="ConfirmPassword" id="materialRegisterFormConfirmPassword" placeholder="পাসওয়ার্ড ফাইনাল করুন" class="form-control" aria-describedby="materialRegisterFormConfirmPasswordHelpBlock">
                                @*<label for="materialRegisterFormConfirmPassword" name="ConfirmPassword">Confirm Password</label>*@
                            </div>



                            <button class="btn btn-info my-4 btn-block" style="font-size:x-large" type="submit">নিবন্ধন</button>
                            <p>
                                <em>ইতিমধ্যে অ্যাকাউন্ট আছে?</em>
                                <a asp-controller="Account" asp-action="Login" style="font-size:large">প্রবেশ  করুন</a>


                        </form>

                    </div>

                </div>
            </div>
            <div class="col-md-1"></div>
        </div>


    </div>

    @*@if (ViewBag.Message != null)
        {
        <script type="text/javascript">
            window.onload = function () {
                swal("Save Succesfull");
            };
        </script>
        }*@
    <script src="~/SweetAlert/sweetalert2.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.6/css/mdb.min.css" rel="stylesheet">
</body>
</html>
