@model ArmsTypeEntryViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">আগ্নেয়াস্ত্রের  ধরণ </h5>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form asp-area="MasterData" asp-controller="ArmsTypeEntry" asp-action="Index" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <input type="hidden" value="0" name="id" id="id">
                            <label for="armsTypeName" class="col-sm-4 col-form-label">Arms Type Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="armsTypeName" id="armsTypeName">
                            </div>
                        </div>
                        <hr />
                        <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title" style="color: black">আগ্নেয়াস্ত্রের  তালিকা </h5>
        <hr>
        <table class="table table-striped table-bordered" id="tblArmsType">
            <thead>
                <tr>
                    <th>আগ্নেয়াস্ত্রের  ধরণ</th>
                    <th>প্রক্রিয়া</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var data in Model.GetArmTypes)
                    {
                        <tr>
                            <td>@data.ArmTypeName</td>
                            <td>
                                <a href="javascript:void(0)" class="btn btn-success" onclick="Edit(@data.Id,'@data.ArmTypeName')"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            $('#tblArmsType').DataTable();
        });

        function Edit(id, armsTypeName) {
            $("#id").val(id);
            $("#armsTypeName").val(armsTypeName);
        }
    </script>
}

