
@model FADMS.Areas.FAMSDEALER.Models.SupplierViewModel
@{
    ViewData["Title"] = "AddSupplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
<style>
    .form-control {
        border-radius: 25px;
        border-color: #18c1ef;
        /*height:46px;
        width:46%;*/
        /*margin-left: 13%;*/
        color: #606066 !important;
    }
</style>
<div class="col-md-12 mb-0 pb-0" style="width:97%">
    <div class="card-header border" style="background-color:#F7F7F7;margin-left: 6px;">
        <h4 class="font-weight-bold;margin-left: -26px;">
            সরবরাহকারীর তথ্য
            @*<a class='btn btn-outline-info float-right mr-4 mb-0' style="" data-toggle='tooltip' title='Go Back' href="/FAMSDEALER/Supplier/SupplierList"><i class="fas fa-backward"></i></a>*@
        </h4>
    </div>
</div>
<div class="card border-0" style="width: 100%;">

    <div class="card-body p-4">

        <div class="card-header border" style="background-color: #F8F9FC; width:98%;margin-top:10px;">
            <div class="col-md-12">
                <h5 class="card-title" style="color: black; margin: 0; text-transform: uppercase;">
                    নতুন তৈরী
                    @*<a class="float-right btn btn-sm btn-info" href="/FAMSDEALER/Supplier/SupplierFileUpload"><i class="fas fa-upload"></i> এক্সেল ফাইল আপলোড</a>*@
                </h5>
            </div>
        </div>
        <div class="card text-light" style="padding:30px!important; width:98%">
            <form asp-area="FAMSDEALER" id="fromInfo" asp-controller="Supplier" asp-action="AddSupplier" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>

                @*<input type="hidden" name="shootingClubInfoId" id="shootingClubInfoId" value="" />*@
                <input type="hidden" name="supplierId" id="supplierId" value="@ViewBag.SupplierId" />

                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">সরবরাহকারী নাম</label>
                            <div class="col-sm-8">
                                <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" id="supplierName" value="@Model.supplier?.supplierName" name="supplierName" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">লাইসেন্স নম্বর </label>
                            <div class="col-sm-8">
                                <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="LicenseNumber" id="LicenseNumber" value="@Model.supplier?.LicenseNumber" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">নিবন্ধিত ঠিকানা</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="registeredAddress" value="@Model.supplier?.registeredAddress" name="registeredAddress">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">ইটিন নম্বর</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="eTinNumber" value="@Model.supplier?.eTinNumber" name="eTinNumber">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">বিন নম্বর</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="binNumber" value="@Model.supplier?.binNumber" name="binNumber">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">

                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">ভ্যাট নম্বর</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="VATNumber" value="@Model.supplier?.VATNumber" name="VATNumber">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">

                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">ইমেল</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="email" name="email" id="email" value="@Model.supplier?.email" />
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">বিকল্প ইমেল</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="alternativeEmail" value="@Model.supplier?.alternativeEmail" name="alternativeEmail">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">মোবাইল </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="mobile" onkeyup="phoneValidation()" value="@Model.supplier?.mobile" name="mobile">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">ফোন </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="phone" value="@Model.supplier?.phone" name="phone">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">সরবরাহকারী ধরণ</label>
                            <div class="col-sm-8">

                                <select class="form-control" id="supplierTypeId" value="@Model.supplier?.supplierTypeId" name="supplierTypeId">
                                    <option value="">নির্বাচন করুন</option>
                                    @foreach (var item in Model.supplierTypes)
                                    {
                                        <option value="@item.Id">@item.supplierTypeName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="type" class="col-sm-4 col-form-label">Dealer</label>
                            <div class="col-sm-8">

                                <select class="form-control" id="dealerid" value="@Model.supplier?.DealerId" name="dealerid">
                                    <option value="">নির্বাচন করুন</option>
                                    @foreach (var item in Model.dealers)
                                    {
                                        <option value="@item.Id">@item.dealerName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="pb-4 mb-4">
                    <button type="button" id="submit" value="Submit" class="btn btn-success float-right mt-2"><i class="fas fa-save"></i></button>
                    <button type="reset" id="submit" onclick="Refresh()" value="Submit" class="btn btn-danger float-right mr-2 mt-2"><i class="fas fa-sync"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>

        function phoneValidation() {
            $("#mobile").on("blur", function () {
                var mobNum = $(this).val();
                var filter = /^\d*(?:\.\d{1,2})?$/;
                if (filter.test(mobNum)) {
                    if (mobNum.length == 11) {
                        //swal("valid");
                    } else {
                        swal('warning', 'অনুগ্রহ করে ১১ সংখ্যার মোবাইল নাম্বারটি প্রদান করুন', 'warning');
                        return false;
                    }
                }
            });
        };

        $('#submit').click(function () {
            var name = $('#mobile').val();
            var filter = /^\d*(?:\.\d{1,2})?$/;
            if (filter.test(name)) {
                if (name.length == 11) {
                    //Is Valid
                }
                else {
                    swal('warning', 'অনুগ্রহ করে ১১ সংখ্যার মোবাইল নাম্বারটি প্রদান করুন', 'warning');
                    return false;
                }
            } 
            var data = $('#fromInfo').serializeArray();
            swal({
                title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
            }).then(function () {
                $.ajax({
                    url: '@Url.Action("/FAMSDEALER/Supplier/AddSupplier")',
                    type: 'POST',
                    data: data
                }).done(function () {
                    if (data[0].value == 0) {
                        swal('success', 'Saved Successfully!', 'success').then(function () {
                            window.location.replace("/FAMSDEALER/Supplier/SupplierList");
                        });
                    }
                    else {
                        swal('success', 'Updated Successfully!', 'success').then(function () {
                            window.location.replace("/FAMSDEALER/Supplier/SupplierList");
                        });;
                    }
                }).fail(function () {
                    swal('warning', 'Failed!', 'warning');
                })
            });
        });




        function UpdateAddress(Id, supplierName, LicenseNumber, registeredAddress, eTinNumber, binNumber, VATNumber, email, alternativeEmail, mobile, phone, supplierTypeId) {
            $('#supplierId').val(Id);
            $('#supplierName').val(supplierName);
            $('#supplierName').val(supplierName);
            $('#registeredAddress').val(registeredAddress);
            $('#eTinNumber').val(eTinNumber);
            $('#binNumber').val(binNumber);
            $('#VATNumber').val(VATNumber);
            $('#email').val(email);
            $('#alternativeEmail').val(alternativeEmail);
            $('#mobile').val(mobile);
            $('#phone').val(phone);
            $('#supplierTypeId').val(supplierTypeId);
        }


        function Refresh() {
            $('#supplierId').val('');
            $('#supplierName').val('');
            $('#supplierName').val('');
            $('#registeredAddress').val('');
            $('#eTinNumber').val('');
            $('#binNumber').val('');
            $('#VATNumber').val('');
            $('#email').val('');
            $('#alternativeEmail').val('');
            $('#mobile').val('');
            $('#phone').val('');
            $('#supplierTypeId').val('');
 
        }


        $(document).ready(function () {
            $('#supplierTable').DataTable();
            $('#supplierTypeId').val(@Model.supplier?.supplierTypeId);
            @*$("#supplierTypeId").val(@Model.supplier.supplierTypeId);*@

            });



        $(function () {
            $('#dob').datepicker({
                uiLibrary: 'bootstrap4'
            });
            $('#dateOfExpair').datepicker({
                uiLibrary: 'bootstrap4'
            });
        });

        
    </script>
}





