
@model FADMS.Areas.FAMSDEALER.Models.SupplierViewModel
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 mb-0 pb-0" style="width:98%">
    <div class="card-header border" style="background-color:#F7F7F7;margin-left: 6px;">
        <h4 class="font-weight-bold;margin-left: -21px;">
            যোগাযোগের জন্য তথ্য
            <a class='btn btn-outline-info float-right mr-4 mb-0' style="" data-toggle='tooltip' title='Go Back' href="/FAMSDEALER/Supplier/SupplierMenu/@ViewBag.SupplierId"><i class="fas fa-backward"></i></a>
        </h4>
    </div>
</div>


<div class="card-header border" style="background-color: #F8F9FC; width:95%;margin-top:20px;margin-left:20px">
    <div class="col-md-12">
        <h5 class="card-title" style="color: black; margin: 0; text-transform: uppercase;">
            তৈরি করুন 
            <a class="float-right btn btn-sm btn-info" href="/FAMSDEALER/Supplier/ContactFileUpload/@ViewBag.supplierId"><i class="fas fa-upload"></i> এক্সেল ফাইল আপলোড করুন </a>
        </h5>
    </div>
</div>

<div class="card" style="width:95%; margin-left:20px">
    <div class="col-12">
        <div class="card-body">
            <form asp-area="FAMSDEALER" id="fromInfo" asp-controller="Supplier" asp-action="Contact" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="supId" id="supId" value="@ViewBag.SupplierId" />
                <input type="hidden" name="contactId" id="contactId" value="" />

                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="presentArea" class="col-sm-4 col-form-label">সরবরাহকারীর নাম </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="personName" value="" name="personName" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="presentBlockSector" class="col-sm-4 col-form-label">বিভাগ </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Department" value="" name="Department" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="presentPostCode" class="col-sm-4 col-form-label">পদবী </label>
                            <div class="col-sm-8">
                                <input data-parsley-type="text" data-parsley-length="[4, 6]" data-parsley-trigger="keyup" class="form-control" id="Designation" value="" name="Designation">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">

                        <div class="form-group row">
                            <label for="presentPostOffice" class="col-sm-4 col-form-label">ফোন নাম্বার </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="phoneNumber" value="" name="phoneNumber">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="presentDivision" class="col-sm-4 col-form-label">মোবাইল নাম্বার <span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="text" value="" class="form-control" id="mobileNumber" name="mobileNumber" data-parsley-required="false" />
                            </div>
                        </div>
                    </div>
                    <div class="col-6">


                    </div>
                </div>

                <button type="button" id="submit" value="Submit" class="btn btn-success float-right"><i class="fas fa-save"></i></button>
                <button type="reset" onclick="Refresh()" class="btn btn-danger float-right mr-2"><i class="fas fa-sync"></i></button>
            </form>
        </div>
    </div>
    <br />

    <div class="col-12">
        <div class="card-header border" style="background-color:#F8F9FC;width:98%">
            <h4 class="m-0 font-weight-bold">যোগাযোগের তালিকা </h4>
        </div>
    </div>

    <div class="col-12" style="width:98%">
        <div class="card ">
            <div class="card-body">
                <table class="table table-striped table-bordered table-sm" id="spouseTable">
                    <thead>
                        <tr>
                            <th>সিরিয়াল নং </th>
                            <th>নাম </th>
                            <th>বিভাগ</th>
                            <th>পদবী</th>
                            <th>ফোন নাম্বার</th>
                            <th>মোবাইল নাম্বার</th>
                            <th>সম্পাদনা করুন</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            @foreach (var data in Model.contacts)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data.personName</td>
                                    <td>@data.Department</td>
                                    <td>@data.Designation</td>
                                    <td>@data.phoneNumber</td>
                                    <td>@data.mobileNumber</td>
                                    <td>
                                        <a class="btn btn-success" onclick="UpdateContact(@data.Id,'@data.personName','@data.Department','@data.Designation','@data.phoneNumber','@data.mobileNumber')" href="#"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger" onclick="Remove(@data.Id)" href="#"><i class="fa fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>

        
       $('#submit').click(function () {
       var data = $('#fromInfo').serializeArray();
		swal({
			title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
		}).then(function () {
			$.ajax({
				url: '@Url.Action("/FAMSDEALER/Supplier/Contact")'+@ViewBag.SupplierId,
				type: 'POST',
				data: data
			}).done(function () {
                if (data[0].value == 0) {
                    swal('success', 'Saved Successfully!', 'success').then(function () {
                        location.reload();
                    });
                }
                else {
                    swal('success', 'Saved Successfully!', 'success').then(function () {
                        location.reload();
                    });;
                }
			}).fail(function () {
				swal('warning', 'Failed!', 'warning');
			})
		});
	})



        $(document).ready(function () {
            $('#spouseTable').DataTable();
        })
        function UpdateContact(Id, personName, Department, Designation, phoneNumber, mobileNumber) {
            $('#contactId').val(Id);
            $('#personName').val(personName);
            $('#Department').val(Department);
            $('#Designation').val(Designation);
            $('#phoneNumber').val(phoneNumber);
            $('#mobileNumber').val(mobileNumber);

        }

        function Refresh() {
            $('#personName').val('');
            $('#personName').val('');
            $('#Department').val('');
            $('#Designation').val('');
            $('#phoneNumber').val('');
            $('#mobileNumber').val('');
        }

    </script>
}


