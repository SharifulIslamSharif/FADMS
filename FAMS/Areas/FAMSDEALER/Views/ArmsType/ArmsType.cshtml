@model FADMS.Areas.FAMSDEALER.Models.ArmsTypeViewModel
@{
    ViewData["Title"] = "ArmsType";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">Arms Type</h5>
        <hr>
        <div class="container">
            <form method="post" action="/FAMSDEALER/ArmsType/ArmsType">
                <input type="hidden" name="armsTypeId" id="armsTypeId" value="@Model.armsTypeId" />
                <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>

                <div class="form-group row">
                    <label for="trainingCategoryName" class="col-sm-4 col-form-label">Arms Type</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="ArmTypeName" id="ArmTypeName" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="trainingCategoryShortName" class="col-sm-4 col-form-label">shortName</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="ArmTypeNameBn" id="ArmTypeNameBn" required>
                    </div>
                </div>
                <hr />
                <button type="submit" value="Submit" class="btn btn-success " style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
                <button type="submit" value="Submit" class="btn btn-danger mr-2" onclick="ReFresh()" style="float:right; margin-top:5px;"><i class="fas fa-sync"></i></button>
                <input name="armsTypeId" type="hidden" id="armsTypeId" value="@Model.armsTypeId" />
            </form>
        </div>
    </div>
</div>
<br />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">

            <div class="card-body">
                <table class="table table-striped table-bordered" id="trainingCategoryTable">
                    <thead>
                        <tr>
                            <th>ArmType Name</th>
                            <th>ArmType Name Bangla</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.armTypes)
                        {
                            <tr>
                                <td>@item.ArmTypeName</td>
                                <td>@item.ArmTypeNameBn</td>
                                <td>
                                    <a class="btn btn-primary" onclick="Edit(@item.Id,'@item.ArmTypeName','@item.ArmTypeNameBn')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger"onclick="Remove(@item.Id)" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script>

    function Edit(Id, ArmTypeName, ArmTypeNameBn) {
        $("#armsTypeId").val(Id);
        $("#ArmTypeName").val(ArmTypeName);
        $("#ArmTypeNameBn").val(ArmTypeNameBn);
    }

    function ReFresh() {
        $("#armsTypeId").val(Id);
        $("#ArmTypeName").val('');
        $("#ArmTypeNameBn").val('');
    }

    function Remove(Id) {
        chk = confirm('Are You Sure To Delete This.?');
        if (chk) {
            location.replace("/FAMSDEALER/ArmsType/Delete/" + Id);
        } else {
            return false;
        }
    }

    $(document).ready(function () {
        $("#trainingCategory").addClass("active");
        $('#trainingCategoryTable').DataTable();
    });
</script>

