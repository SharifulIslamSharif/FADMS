@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $('#btnDocumentCancel').click(function (e) {
                location.reload();
            });
            $('#btnPhotoCancel').click(function (e) {
                location.reload();
            });
        });
        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
        function showdoc(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_doc').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
        function DeleteComment(Id, actionTypeId) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                window.location.href = "/FAMSDEALER/Purchase/DeleteComments?Id=" + Id + '&actionId=' + actionTypeId;;

                swal('', 'Deleted Successfully!', 'success')
            });
        }
        function DeletePhoto(actionTypeId, Id) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                window.location.href = "/Purchase/Purchase/DeletePhoto?actionId=" + actionTypeId + '&photoId=' + Id;
                swal('', 'Deleted Successfully!', 'success')
            });
        }


    </script>
}
