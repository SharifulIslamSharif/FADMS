
@model FADMS.Areas.FAMSDEALER.Models.PurchaseViewModel
@{
    ViewData["Title"] = "Purchase Invoice PDF";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

<div class="col-12">
    <div>
        <div style="float:left">
            <img src="~/appslogo/Specialbranch.png" style="margin:0px 0px 0px 0px;" height="70" width="70" />
        </div>
        <div style="color:black">

            <h4 style="font-weight:900;padding-left:250px">Firearms Management System</h4>
            <h6 style="width:650px;padding-left:300px;text-align:center">
                SB Head Querters,Dhaka, Bangladesh
                Contact Number:013********
            </h6>

            <p style="width:650px;padding-left:300px;text-align:center;margin-top:30px!important; font-weight:600">Purchase Invoice</p>

        </div>

    </div>
    <br />
    <br />



    <div style="margin-bottom:30px;color:black">
        <span style="float:left;font-weight:600;">Invoice No : @Model.GetPurchaseOrderMasterById?.poNo</span>
        <span style="text-align:right;float:right;font-weight:600;">Invoice Date : @Model.GetPurchaseOrderMasterById.poDate?.ToString("dd-MMM-yyyy")</span>
        <br />
        <span style="float:left;font-weight:600;">Supplier Name : @Model.GetPurchaseOrderMasterById?.supplier?.supplierName</span>
        <br />
        <span style="float:left;font-weight:600;">Address : @Model.GetPurchaseOrderMasterById?.supplier?.registeredAddress</span>
    </div>

    <div>
        <table class="table table-striped table-bordered " id="voucherList" style="margin-left: 0px;">
            <thead style="border:1px solid;border-color:grey">

                <tr style="border:1px solid;border-color:#E3E6F0">
                    <th style="width:50%;border:1px solid;border-color:grey;background-color:#E3E6F0;">Item</th>
                    <th style="width:40%;border:1px solid;border-color:grey;background-color:#E3E6F0;">Item Spec</th>
                    <th style="width:20%;border:1px solid;border-color:grey;background-color:#E3E6F0;">Unit</th>
                    <th style="text-align:right;width:15%;border:1px solid;border-color:grey;background-color:#E3E6F0;">Qty</th>
                    <th style="text-align:right;width:50%;border:1px solid;border-color:grey;background-color:#E3E6F0;">Price</th>
                    <th style="text-align:right;width:50%;border:1px solid;border-color:grey;background-color:#E3E6F0;">VAT</th>
                    <th style="text-align:right;width:50%;border:1px solid;border-color:grey;background-color:#E3E6F0;">TAX</th>

                    <th style="text-align:right;width:15%;border:1px solid;border-color:grey;background-color:#E3E6F0;">Sub total</th>
                </tr>
            </thead>
            <tbody style="color:black;border:1px solid;border-color:grey">
                @{
                    decimal? totalAmount = 0;
                    string totalView = "";
                    decimal? totalVat = 0;
                    decimal? totalTax = 0;
                    decimal? totalGross = 0;

                    foreach (var data in Model.purchaseOrderDetails)
                    {
                        totalAmount = (@data.quantity * @data.rate + @data.vatAmount + data.taxAmount);
                        totalView = totalAmount?.ToString("0,0.00");
                        totalTax = totalTax + @data.taxAmount;
                        totalVat = totalVat + data.vatAmount;
                        totalGross = totalGross + totalAmount;
                        <tr style="background-color:white;color:black;border:1px solid;border-color:grey;">
                            <td style="border:1px solid;border-color:grey">@data.itemSpecification?.Item?.itemName</td>
                            <td style="border:1px solid;border-color:grey">@data.itemSpecification?.specificationName</td>
                            <td style="border:1px solid;border-color:grey">@data.itemSpecification?.Item?.unit?.unitName</td>
                            <td style="text-align:right;border:1px solid;border-color:grey">@data.quantity</td>
                            <td style="text-align:right;border:1px solid;border-color:grey">@data.rate</td>
                            <td style="text-align:right;border:1px solid;border-color:grey">@data.vatAmount</td>
                            <td style="text-align:right;border:1px solid;border-color:grey">@data.taxAmount</td>
                            <td style="text-align:right;border:1px solid;border-color:grey">@totalView</td>
                        </tr>
                    }
                    <tr style="background-color:white;">
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;border-right: 1px;"></td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">Gross total:</td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">@totalGross?.ToString("0,0.00")</td>
                    </tr>
                    <tr style="background-color:white;">
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;border-right: 1px;"></td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">Total Tax</td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">@totalTax?.ToString("0,0.00") </td>
                    </tr>
                    <tr style="background-color:white;">
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;border-right: 1px;"></td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">Total Vat</td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">@totalVat?.ToString("0,0.00")</td>
                    </tr>
                    <tr style="background-color:white;">
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;"></td>
                        <td style="text-align:right;border-right: 1px;"></td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">Net Total:</td>
                        <td style="text-align:right;border:1px solid;border-color:grey;">@totalGross?.ToString("0,0.00")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>

        <div style="text-align:left;width:500px">
            <span style="color:black"><span style="font-weight:600">Amount In Word:</span>&nbsp; &nbsp;@ViewBag.InWord</span>
        </div>

    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div>
        <div>

            <div style="float:left">
                <span style="color:black"></span>
                <br />
                <span style="color:black">---------------------</span>
                <br />
                <span style="color:black;padding-left:20px">Approved By</span>
            </div>

            <div style="float:right">
                @*<span style="color:black;text-align:center;">@Model.GetPurchaseOrderMasterById.createdBy</span>*@
                <br />
                <span style="color:black">------------------</span>
                <br />
                <span style="color:black;padding-left:20px">Created By</span>
            </div>

        </div>


    </div>

</div>














