            <div class="card" style="width: 97%;margin:0!important;">
                <div class="card-header">
                    <h5 class="card-title" style="color: black">ডিলারের তথ্য </h5>
                </div>
            </div>
            <div class="card mt-1" style="width: 97%;padding:10px">

                <form action="/FAMSAPP/DealerInfo/DealerInfo" method="post">
                    <div class="card-body">
                        <input type="hidden" name="id" id="id">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label for="armTypeId" class="col-sm-4 col-form-label">প্রতিষ্ঠানের নাম </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="organizationName" name="organizationName" data-parsley-required="true" />
                                    </div>

                                </div>
                                <div class="form-group row">
                                    @*<label for="armTypeId" class="col-sm-4 col-form-label">@Model.armBuyInfoLn.armsType</label>*@
                                    <label for="armTypeId" class="col-sm-4 col-form-label">শুরুর তারিখ </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="establishedDate" name="establishedDate" data-parsley-required="true" />
                                    </div>

                                </div>

                                <div class="form-group row">
                                    @*<label for="manufactureId" class="col-sm-4 col-form-label">@Model.armBuyInfoLn.manufacturer</label>*@
                                    <label for="manufactureId" class="col-sm-4 col-form-label">মোবাইল (অফিস )</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="officeMobile" name="officeMobile" data-parsley-required="true" />
                                    </div>

                                </div>
                                <div class="form-group row">
                                    @*<label for="purchaseDate" class="col-sm-4 col-form-label">@Model.armBuyInfoLn.purchaseDate</label>*@
                                    <label for="purchaseDate" class="col-sm-4 col-form-label">ফোন (অফিস) </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="officePhone" name="officePhone" data-parsley-required="true" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group row">
                                    <label for="purchaseDate" class="col-sm-4 col-form-label">মালিকের নাম </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="ownerName" name="ownerName" data-parsley-required="true" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @*<label for="armModelId" class="col-sm-4 col-form-label">@Model.armBuyInfoLn.model</label>*@
                                    <label for="armModelId" class="col-sm-4 col-form-label">এন.আই.ডি. </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="ownerNid" name="ownerNid" data-parsley-required="true" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @*<label for="quantity" class="col-sm-4 col-form-label">@Model.armBuyInfoLn.armIdNo</label>*@
                                    <label for="quantity" class="col-sm-4 col-form-label"> মোবাইল (ব্যক্তিগত ) </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="ownerMobile" name="ownerMobile" data-parsley-required="true" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @*<label for="quantity" class="col-sm-4 col-form-label">@Model.armBuyInfoLn.armIdNo</label>*@
                                    <label for="quantity" class="col-sm-4 col-form-label"> লাইসেন্স নাম্বার  </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="licenseNo" name="licenseNo" data-parsley-required="true" />
                                    </div>
                                </div>

                                <button class="btn btn-success btn-sm" type="submit" id="btnAdd" style="float:right;"><i class="fa fa-save"></i> জমা করুন </button>
                            </div>
                        </div>
                    </div>

                </form>

                <hr />
                <br />
                <div class="col-12">
                    <table id="tblDealerInfo" class="table table-striped table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>প্রতিষ্ঠানের নাম</th>
                                <th> মোবাইল (অফিস )</th>
                                <th>মালিকের নাম  </th>
                                <th> মোবাইল (ব্যক্তিগত ) </th>
                                <th>সম্পাদনা করুন </th>
                            </tr>
                        </thead>
                        <tbody>
                            @*@foreach (var data in Model.GetarmPurchaseInfobydealerId)
                            {*@
                            <tr>
                                <td>NameOfOrganization</td>
                                <td>ArmTypeName</td>
                                <td>modelName</td>
                                <td>ManufactureName</td>

                                <td>
                                    <a href="javascript:void(0)" class="btn btn-success" onclick="Edit()"><i class="fa fa-edit"></i></a>
                                    <a href="javascript:void(0)" class="btn btn-danger" onclick="Delete()"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            @*}*@

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
